extends layout
block cstyle
    link(type='text/css', rel='stylesheet', href='/css/login.css')
block content
    .bt-login-container
        .bt-login-bg
        .bt-login-logo
            .bt-login-lg
            .bt-login-title SCHOEU
        .bt-login-area
            .bt-login-lf
            .bt-login-rt
                .bt-login-ctt
                    .bt-login-btns
                        .bt-login-signup.bt-login-active
                            | 注册
                        .bt-login-login
                            | 登录
                    .bt-login-wc
                        | WELCOME
                        br
                        | TO
                        br
                        | SCHOEU
                    .bt-login-lgform.bt-font-16
                        form.signupForm(action='/users/login', method='post')
                            label(for='username') 账号
                            .bt-login-un
                                input#username.bt-font-14(type='text', name='username', placeholder='请输入用户名')
                            label(for='password') 密码
                            .bt-login-psw.bt-login-un
                                input#password.bt-font-14(type='password', name='password', placeholder='请输入密码')
                            label(for='repassword') 确认密码
                            .bt-login-psw
                                input#repassword.bt-font-14(type='password', name='repassword', placeholder='请再次输入密码')
                            .bt-login-forget.bt-font-14
                                span.bt-text-left.signUpText
                            .bt-login-libtn.bt-font-14.bt-text-center
                                input.bt-btn.bt-signup-submit(type='submit', value='注册')
block cscript
    script(src='/js/signup.js')
